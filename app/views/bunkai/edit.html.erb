<span id="bunkai">
  <h2><%= @bunkai.title %></h2>
  <span class="techniques">
    <%= render @bunkai.techniques %>
  </span>
  <span class="maneuvers">
    <% @bunkai.maneuvers.each do |maneuver| %>
      <%= form_for maneuver, :html => { :multipart => true } do |form| %>
        <%= render 'shared/error_messages', :object => form.object %>
        <%= form.text_area :description, :size => "80x6" %>
        <%if maneuver.image.file? %>
          <%= image_tag maneuver.image.url(:small) %>
          <%= form.file_field :image %>
        <% end %>
        <%= form.radio_button :actor, "attacker" %>
        <%= form.label :attacker %>
        <%= form.radio_button :actor, "defender" %>
        <%= form.label :defender %>
        <%= form.submit 'Update' %>
        <%= link_to "delete", maneuver_path(maneuver), :method => :delete, 
          :confirm => "Are you sure?", :title => "Delete maneuver" %>
      <% end %>
    <% end %>
    <hr />
    <%= form_for @new_maneuver, :html => { :multipart => true } do |form| %>
      <%= hidden_field_tag(:bunkai_id, @bunkai.id) %>
      <%= render 'shared/error_messages', :object => form.object %>
      <%= form.text_area :description, :size => "80x6" %>
      <%= form.radio_button :actor, "attacker" %>
      <%= form.label :attacker %>
      <%= form.radio_button :actor, "defender" %>
      <%= form.label :defender %>
      <%= form.file_field :image %>
      <%= form.label :image %>
      <%= form.submit 'Add' %>
    <% end %>
  </span>
  <%= link_to "Done", @bunkai %>
</span>