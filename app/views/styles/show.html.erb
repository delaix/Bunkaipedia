<%= render 'shared/breadcrumb', :object => @style %>
<div class="katas">
  <h2><%= @style.name %> Katas</h2>
  <ul class="flat">
    <% @style.katas.each do |kata| %>
      <li><%= link_to kata.name, kata_path(kata) %></li>
    <% end %>
  </ul>
</div>
<div class="round">
  <% if user_signed_in? %>
    <%= link_to '+', new_kata_path(:style_id => @style.id), :class => "buttonlike round"%>
  <% end %>
</div>